<h2>新規登録</h2>

<%= form_with(model: resource, as: resource_name, url: session_path(resource_name), local: true) do |f| %>
   <div class="field">
    <%= f.label "ユーザーネーム" %><br>
    <%= f.text_field  :nickname %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label "パスワード" %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>
  <div class="field">
    <%= f.label "確認用パスワード" %><br>
    <%= f.password_field :password_confirmation, autocomplete: "current-password" %>
  </div>

  <div class="field">
    <%= f.label "生年月日" %><br>
    <%= f.date_field :birthday %>
  </div>

 

  <div class="field">
    <%= f.label "郵便番号" %><br>
    <%= f.text_field :postal_code %>
  </div>

  
  <div class="field">
    <%= f.label "市町村" %><br>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label "番地" %><br>
    <%= f.text_field :street_address %>
  </div>

  <div class="field">
    <%= f.label "建物名" %><br>
    <%= f.text_field :building %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
